[user]
	name = Brad Cowie
	email = {{ .email }}
	signingKey = ~/.ssh/id_ed25519.pub
[core]
	editor = vim
[init]
	defaultBranch = main
[push]
	default = simple
[branch]
	sort = authordate
[column]
	branch = auto
[commit]
	gpgSign = true
[gpg]
	format = ssh
[includeIf "gitdir:~/Dev/wand/"]
	path = ~/Dev/wand/.gitconfig
[includeIf "gitdir:~/Dev/faucet/"]
	path = ~/Dev/faucet/.gitconfig
[includeIf "gitdir:~/Dev/fsmg/"]
	path = ~/Dev/fsmg/.gitconfig
[includeIf "gitdir:~/Dev/kde/"]
	path = ~/Dev/kde/.gitconfig
[includeIf "gitdir:~/Dev/canopus/"]
	path = ~/Dev/canopus/.gitconfig
[includeIf "gitdir:~/Dev/dualpath/"]
	path = ~/Dev/dualpath/.gitconfig
[includeIf "gitdir:~/Dev/tff/"]
	path = ~/Dev/tff/.gitconfig
